\begin_layout Subsection
几率守恒
\end_layout

\begin_layout Standard
几率在全空间守恒：
\end_layout

\begin_layout Itemize
以 
\begin_inset Formula $\psi^{*}(\vec{x},t)$
\end_inset

 左乘 Schrödinger 方程
\begin_inset Formula 
\[
\ii\hbar\frac{\partial}{\partial t}\psi=\left(\frac{-\hbar^{2}}{2m}\nabla^{2}+V\right)\psi
\]

\end_inset

得
\begin_inset Formula 
\[
\ii\hbar\psi^{*}\frac{\partial}{\partial t}\psi=\frac{-\hbar^{2}}{2m}\psi^{*}\nabla^{2}\psi+\psi^{*}V\psi
\]

\end_inset


\end_layout

\begin_layout Itemize
对 Schrödinger 方程取复共轭，得
\begin_inset Formula 
\[
-\ii\hbar\frac{\partial}{\partial t}\psi^{*}=\left(\frac{-\hbar^{2}}{2m}\nabla^{2}+V\right)\psi^{*}
\]

\end_inset

再以 
\begin_inset Formula $\psi(\vec{x},t)$
\end_inset

 左乘之，得
\begin_inset Formula 
\[
-\ii\hbar\psi\frac{\partial}{\partial t}\psi^{*}=\frac{-\hbar^{2}}{2m}\psi\nabla^{2}\psi^{*}+\psi V\psi^{*}
\]

\end_inset


\end_layout

\begin_layout Itemize
两式相减得
\begin_inset Formula 
\[
\ii\hbar\frac{\partial}{\partial t}(\psi^{*}\psi)=\frac{-\hbar^{2}}{2m}(\psi^{*}\nabla^{2}\psi-\psi\nabla^{2}\psi^{*})=\frac{-\hbar^{2}}{2m}\grad(\psi^{*}\grad\psi-\psi\grad\psi^{*})
\]

\end_inset

定义
\begin_inset Formula 
\[
\rho\coloneqq\psi^{*}\psi\equiv\vert\psi\vert^{2}\qquad\vec{\jmath}\coloneqq\frac{-\ii\hbar}{2m}(\psi^{*}\grad\psi-\psi\grad\psi^{*})
\]

\end_inset

从而有“连续性方程”
\begin_inset Formula 
\[
\frac{\partial\rho}{\partial t}+\divg\vec{\jmath}=0
\]

\end_inset


\end_layout

