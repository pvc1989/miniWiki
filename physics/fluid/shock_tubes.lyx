\begin_layout Subsubsection
光滑且单调的压力函数
\end_layout

\begin_layout Lemma
关于 
\begin_inset Formula $p_{\mathrm{A}}\ge0$
\end_inset

 的一元函数
\begin_inset Formula 
\begin{equation}
f(p_{\mathrm{A}};p_{\mathrm{B}},\rho_{\mathrm{B}})=\begin{cases}
(p_{\mathrm{A}}-p_{\mathrm{B}})/\sqrt{\rho_{\mathrm{B}}P} & p_{\mathrm{A}}>p_{\mathrm{B}}\\
0 & p_{\mathrm{A}}=p_{\mathrm{B}}\\
(2a_{\mathrm{B}}/\gamma^{-})\left[(p_{\mathrm{A}}/p_{\mathrm{B}})^{\gamma^{-}/(2\gamma)}-1\right] & p_{\mathrm{A}}<p_{\mathrm{B}}
\end{cases}\label{eq:激波管：压力函数：单波}
\end{equation}

\end_inset

对于任何给定的 
\begin_inset Formula $\rho_{\mathrm{B}},p_{\mathrm{B}}$
\end_inset

 是连续可微且单调递增的，其中
\begin_inset Formula 
\[
P=\frac{\gamma^{+}}{2}p_{\mathrm{A}}+\frac{\gamma^{-}}{2}p_{\mathrm{B}}\qquad a_{\mathrm{B}}=\sqrt{\frac{\gamma p_{\mathrm{B}}}{\rho_{\mathrm{B}}}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
记
\begin_inset Formula 
\[
f_{1}(p_{\mathrm{A}})=\frac{p_{\mathrm{A}}-p_{\mathrm{B}}}{\sqrt{\rho_{\mathrm{B}}P}},p_{\mathrm{A}}>p_{\mathrm{B}}\qquad f_{2}(p_{\mathrm{A}})=\frac{2a_{\mathrm{B}}}{\gamma^{-}}\left[\left(\frac{p_{\mathrm{A}}}{p_{\mathrm{B}}}\right)^{\gamma^{-}/(2\gamma)}-1\right],p_{\mathrm{A}}<p_{\mathrm{B}}
\]

\end_inset

函数 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:激波管：压力函数：单波"

\end_inset

 的连续性可以由 
\begin_inset Formula $f_{1}(p_{\mathrm{A}}=p_{\mathrm{B}})=0=f_{2}(p_{\mathrm{A}}=p_{\mathrm{B}})$
\end_inset

 直接得到。下面证明它的可微性与单调性：
\end_layout

\begin_deeper
\begin_layout Itemize
容易验证：
\begin_inset Formula $f_{1},f_{2}$
\end_inset

 分别在其定义域内可导。下面只需验证
\begin_inset Formula 
\[
\lim_{\epsilon\to0^{-}}f_{1}'(p_{\mathrm{B}}+\epsilon)=\lim_{\epsilon\to0^{+}}f_{2}'(p_{\mathrm{B}}+\epsilon)
\]

\end_inset

代入导数定义即得
\begin_inset Formula 
\[
\begin{aligned}\dv{f_{1}}{p_{\mathrm{A}}} & =\frac{1}{\sqrt{\rho_{\mathrm{B}}P}}+\frac{p_{\mathrm{A}}-p_{\mathrm{B}}}{\sqrt{\rho_{\mathrm{B}}}}\dv{P^{-1/2}}{p_{\mathrm{A}}}=\frac{1}{\sqrt{\rho_{\mathrm{B}}P}}+\frac{p_{\mathrm{A}}-p_{\mathrm{B}}}{\sqrt{\rho_{\mathrm{B}}}}\left(\frac{P^{-3/2}}{-2}\right)\dv{P}{p_{\mathrm{A}}}\\
 & =\frac{1}{\sqrt{\rho_{\mathrm{B}}P}}\left(1+\frac{\gamma^{+}}{4}\frac{p_{\mathrm{B}}-p_{\mathrm{A}}}{P}\right)\\
\lim_{\epsilon\to0^{-}}f_{1}'(p_{\mathrm{B}}+\epsilon) & =\frac{1}{\sqrt{\rho_{\mathrm{B}}\gamma p_{\mathrm{B}}}}=\frac{1}{\rho_{\mathrm{B}}a_{\mathrm{B}}}\\
\dv{f_{2}}{p_{\mathrm{A}}} & =\frac{2a_{\mathrm{B}}}{\gamma^{-}}\frac{\gamma^{-}}{2\gamma}\left(\frac{p_{\mathrm{A}}}{p_{\mathrm{B}}}\right)^{\frac{\gamma^{-}}{2\gamma}-1}\frac{1}{p_{\mathrm{B}}}=\frac{1}{\rho_{\mathrm{B}}a_{\mathrm{B}}}\left(\frac{p_{\mathrm{A}}}{p_{\mathrm{B}}}\right)^{-\frac{\gamma^{+}}{2\gamma}}\\
\lim_{\epsilon\to0^{+}}f_{2}'(p_{\mathrm{B}}+\epsilon) & =\frac{1}{\sqrt{\rho_{\mathrm{B}}\gamma p_{\mathrm{B}}}}=\frac{1}{\rho_{\mathrm{B}}a_{\mathrm{B}}}
\end{aligned}
\]

\end_inset

从而有
\begin_inset Formula 
\[
f'(p_{\mathrm{A}}=p_{\mathrm{B}})=\lim_{\epsilon\to0^{-}}f_{1}'(p_{\mathrm{B}}+\epsilon)=\lim_{\epsilon\to0^{+}}f_{2}'(p_{\mathrm{B}}+\epsilon)
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $f$
\end_inset

 的单调递增性质可以由 
\begin_inset Formula $f'(p_{\mathrm{A}})>0,\forall p_{\mathrm{A}}>0$
\end_inset

 获得，只需分段验证即可：
\begin_inset Formula 
\[
f'(p_{\mathrm{A}})=\begin{cases}
f_{1}'(p_{\mathrm{A}}) & p_{\mathrm{A}}>p_{\mathrm{B}}\\
1/(\rho_{\mathrm{B}}a_{\mathrm{B}}) & p_{\mathrm{A}}=p_{\mathrm{B}}\\
f_{2}'(p_{\mathrm{A}}) & p_{\mathrm{A}}<p_{\mathrm{B}}
\end{cases}
\]

\end_inset

第二、三行的非负性是显然的；第一行的非负性也容易验证：
\begin_inset Formula 
\[
1-\frac{\gamma^{+}}{4}\frac{p_{\mathrm{A}}-p_{\mathrm{B}}}{P}=1-\frac{1}{2}\frac{p_{\mathrm{A}}-p_{\mathrm{B}}}{p_{\mathrm{A}}+(\gamma^{-}/\gamma^{+})p_{\mathrm{B}}}>1-\frac{1}{2}>0\impliedby\begin{cases}
p_{\mathrm{A}}>p_{\mathrm{B}}\\
\gamma>1
\end{cases}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Theorem
关于 
\begin_inset Formula $p_{*}\ge0$
\end_inset

 的一元函数
\begin_inset Formula 
\begin{equation}
F(p_{*};\rho_{\pm},u_{\pm},p_{\pm})=f(p_{*};p_{+},\rho_{+})+f(p_{*};p_{-},\rho_{-})+u_{+}-u_{-}\label{eq:激波管：压力函数：双波}
\end{equation}

\end_inset

对于任何给定的 
\begin_inset Formula $\rho_{\pm}\text{、}u_{\pm}\text{、}p_{\pm}$
\end_inset

 都是连续可微且单调递增的，并且有
\begin_inset Formula 
\[
\lim_{p_{*}\to0^{+}}F(p_{*};\rho_{\pm},u_{\pm},p_{\pm})=\left(u_{+}-\frac{2a_{+}}{\gamma^{-}}\right)-\left(u_{-}+\frac{2a_{-}}{\gamma^{-}}\right)
\]

\end_inset

其中 
\begin_inset Formula $f$
\end_inset

 由 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:激波管：压力函数：单波"

\end_inset

 式定义。
\end_layout

\begin_layout Standard
