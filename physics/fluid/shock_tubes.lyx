\begin_inset Formula 
\begin{equation}
\begin{gathered}\partial_{t}\ket{U}+\partial_{x}\ket{F_{x}}+\partial_{y}\ket{F_{y}}=\ket{0}\qquad(x,y,t)\in(-\infty,\infty)^{2}\times(0,\infty)\\
\ket{U}=\begin{bmatrix}\rho\\
\rho u\\
\rho v\\
\rho e_{0}
\end{bmatrix}\qquad\ket{F_{x}}=\begin{bmatrix}\rho u\\
\rho uu+p\\
\rho vu\\
\rho h_{0}u
\end{bmatrix}\qquad\ket{F_{y}}=\begin{bmatrix}\rho v\\
\rho uv\\
\rho vv+p\\
\rho h_{0}v
\end{bmatrix}\\
e_{0}=\frac{p/\rho}{\gamma^{-}}+\frac{u^{2}+v^{2}}{2}\qquad h_{0}=e_{0}+\frac{p}{\rho}
\end{gathered}
\label{eq:激波管：二维：守恒型}
\end{equation}

\end_inset

